    //оптовые продажи
    section.section.section-slide.category-preview.active
      .section__display
        .scene
          .bg.bg_mask(data-depth="0.05" style='background-image: url("img/bg/home3.jpg")')
        .section__content.l-pd.p-s.p-r-p.p-t-h.content-b.p-b-p
          .section__container
            h5.section__title.t-size-64 Топливо оптом
      .section__bottom.category-preview__bottom
        .category-preview__description.scroll-container
          .scroll-child.p-s
            h6.category-preview__title.ff-2.t-size-24 Прямые поставки от производителей
