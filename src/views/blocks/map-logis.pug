          span(data-area='2') 55 коп/л
          span(data-area='3') 1 руб/л
        .custom-map__inner.js-no-scroll
          include map
          a(data-base='1' href="javascript:void(0);" style='top:31%;left:56.7%').item.map-trigger.size1.js-animated
          a(data-base='2' href="javascript:void(0);" style='top:46.5%;left:62%').item.map-trigger.size1.js-animated
