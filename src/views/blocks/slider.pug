            .fuel-slide
              .fuel-slide__container.js-animated
                span.fuel-slide__index 03
                .fuel-slide__top
                  .fuel-slide__item
                    span.fuel-slide__label Литр
                    span.fuel-slide__price 36.45 ₽
                  .fuel-slide__item
                    span.fuel-slide__label Тонна
                    span.fuel-slide__price 49 250 ₽
                .fuel-slide__bottom
                  a(href='content/АИ-92-К5.pdf' target='_blank').fuel-slide__pasport.js-animated
                    svg.icon 
                      use(xlink:href="img/icons/sprite.svg#ico5")
                    span Паспорт
                  h6.fuel-slide__title АИ-92
